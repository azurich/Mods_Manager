{
  "name": "mods-manager",
  "version": "2.0.1",
  "description": "Gestionnaire de mods Minecraft moderne avec Shadcn UI",
  "author": "Azurich",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3001 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "electron-builder && node rename-files.js",
    "build-win": "npm run build",
    "dist": "npm run build",
    "pack": "npm run build && electron-builder --dir",
    "preview": "vite preview",
    "release": "electron-builder --publish always",
    "build-and-release": "node build-and-release.js"
  },
  "build": {
    "appId": "com.azurich.modsmanager",
    "productName": "Mods Manager",
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "azurich",
      "repo": "Mods_Manager"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "config/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        },
        {
          "target": "nsis",
          "arch": "ia32"
        },
        {
          "target": "portable",
          "arch": "x64"
        },
        {
          "target": "portable",
          "arch": "ia32"
        }
      ],
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "assets/app.ico",
      "uninstallerIcon": "assets/app.ico",
      "installerHeaderIcon": "assets/app.ico",
      "displayLanguageSelector": false,
      "deleteAppDataOnUninstall": true,
      "guid": "com.azurich.modsmanager",
      "perMachine": false,
      "artifactName": "Mods-Manager-Setup-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "Mods-Manager-Portable-${arch}.${ext}"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.2.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
