{
  "name": "mods-manager",
  "version": "2.0.6",
  "description": "Gestionnaire de mods Minecraft moderne avec Shadcn UI",
  "author": {
    "name": "Azurich",
    "email": "contact@azurich.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/azurich/Mods_Manager.git"
  },
  "bugs": {
    "url": "https://github.com/azurich/Mods_Manager/issues"
  },
  "homepage": "https://modsmanager.azurich.fr",
  "keywords": [
    "minecraft",
    "mods",
    "manager",
    "electron",
    "modding"
  ],
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3001 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "electron-builder && node rename-files.js",
    "build-win": "npm run build",
    "dist": "npm run build",
    "pack": "npm run build && electron-builder --dir",
    "preview": "vite preview",
    "release": "electron-builder --publish always",
    "build-and-release": "node build-and-release.js"
  },
  "build": {
    "appId": "com.azurich.modsmanager",
    "productName": "Mods Manager",
    "copyright": "© 2024 Azurich. Tous droits réservés.",
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "azurich",
      "repo": "Mods_Manager"
    },
    "extraMetadata": {
      "support": {
        "url": "https://github.com/azurich/Mods_Manager/issues",
        "email": "contact@azurich.fr",
        "website": "https://modsmanager.azurich.fr"
      },
      "documentation": "https://modsmanager.azurich.fr/docs",
      "donate": "https://github.com/sponsors/azurich"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "config/**/*",
      "build/app-update.yml"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        },
        {
          "target": "nsis",
          "arch": "ia32"
        }
      ],
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "Mods-Manager-Setup-${arch}.${ext}",
      "uninstallDisplayName": "Mods Manager",
      "deleteAppDataOnUninstall": false,
      "allowElevation": false,
      "installerIcon": "assets/app.ico",
      "uninstallerIcon": "assets/app.ico",
      "runAfterFinish": false,
      "shortcutName": "Mods Manager",
      "perMachine": false,
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "installerLanguages": [
        "fr_FR",
        "en_US"
      ],
      "menuCategory": "Games",
      "guid": "8b3f8b3a-3c4e-4f5a-8b3f-8b3a3c4e4f5a",
      "differentialPackage": false
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "i18next": "^25.3.2",
    "i18next-fs-backend": "^2.6.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.6.1",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
